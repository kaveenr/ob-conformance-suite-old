<ns2:Specification xmlns:ns2="org.wso2.finance.open.banking.conformance.mgt.models" name="OpenData" version="v1.0">
    <title>OpenBankAPI</title>
    <description>This API exposes open data of a bank such as the branch locations, ATM locations, and supporting
        products.
    </description>
    <specificationUri>https://github.com/OpenBankingUK/</specificationUri>
    <glueClassPath>org.wso2.finance.open.banking.conformance.tests.opendata</glueClassPath>
    <attributeGroups>
        <AttributeGroup groupName="default" title="Server Configuration">
            <Attribute name="base_url">
                <label>Base URL</label>
                <attributeType>String</attributeType>
                <helpText>base url of the API</helpText>
                <validationRegex>
                    (http(s)?:\/\/.)?(www\.)?[-a-zA-Z0-9@:%._\+~#=]{2,256}\.[a-z]{2,6}\b([-a-zA-Z0-9@:%_\+.~#?&amp;//=]*)
                </validationRegex>
                <defaultValue>https://api-openbanking.wso2.com/OpenBankAPI</defaultValue>
            </Attribute>
        </AttributeGroup>
    </attributeGroups>
    <vectors>
        <Vector tag="@security">
            <title>Security</title>
            <description>check OIDC flow</description>
        </Vector>
        <Vector tag="@data">
            <title>Data Formats</title>
            <description>check OpenAPI compliance</description>
        </Vector>
    </vectors>
    <features>
        <Feature
                uri="samples/org.wso2.finance.open.banking.conformance.tests.opendata/src/main/resources/features/atms.feature">
            <title>ATMs endpoint</title>
            <description>Get the details of all atms owned by a bank</description>
            <attributeGroups>
                <AttributeGroup groupName="uri" title="URI Parameters">
                    <Attribute name="bank_id">
                        <label>Bank ID</label>
                        <attributeType>String</attributeType>
                        <helpText>Bank ID of the ATM</helpText>
                        <defaultValue>bank-4020-01</defaultValue>
                    </Attribute>
                </AttributeGroup>
            </attributeGroups>
            <Scenarios>
                <Scenario scenarioName="Get the details of all atms owned by a bank" specName="OpenData"
                          specSection="1.1"/>
            </Scenarios>
        </Feature>
        <Feature
                uri="samples/org.wso2.finance.open.banking.conformance.tests.opendata/src/main/resources/features/branches.feature">
            <title>Branches endpoint</title>
            <description>Get the details of all the branches of a bank</description>
            <attributeGroups>
                <AttributeGroup groupName="uri" title="URI Parameters">
                    <Attribute name="bank_id">
                        <label>Bank ID</label>
                        <attributeType>String</attributeType>
                        <helpText>Bank ID of the ATM</helpText>
                        <defaultValue>bank-4020-01</defaultValue>
                    </Attribute>
                </AttributeGroup>
            </attributeGroups>
            <Scenarios>
                <Scenario scenarioName="Get the details of all branches of a bank" specName="OpenData"
                          specSection="2.1"/>
                <Scenario scenarioName="Check the geo-location information of the branch" specName="OpenData"
                          specSection="2.2"/>
            </Scenarios>
        </Feature>
        <Feature
                uri="samples/org.wso2.finance.open.banking.conformance.tests.opendata/src/main/resources/features/products.feature">
            <title>Products endpoint</title>
            <description>Get the details of the products supported by a bank</description>
            <attributeGroups>
                <AttributeGroup groupName="uri" title="URI Parameters">
                    <Attribute name="bank_id">
                        <label>Bank ID</label>
                        <attributeType>String</attributeType>
                        <helpText>Bank ID of the ATM</helpText>
                        <defaultValue>bank-4020-01</defaultValue>
                    </Attribute>
                </AttributeGroup>
            </attributeGroups>
            <Scenarios>
                <Scenario scenarioName="Get the details of all products which are supported by bank" specName="OpenData"
                          specSection="3.1"/>
            </Scenarios>
        </Feature>
    </features>
</ns2:Specification>
